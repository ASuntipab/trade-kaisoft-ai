{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noUnusedLocals": false,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"compileOnSave": true,
	"include": [
		"src",
		"node_modules/dayjs/plugin/utc.d.ts"
	]
}